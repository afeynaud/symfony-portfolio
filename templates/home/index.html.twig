{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <div class='row'>
            <div class='col'>
                <h1>Bienvenue dans mon portfolio</h1>
                {% for project in projects %}
                    <div class="card" style="width: 25rem;">
                        <img class="card-img-top" src="{{ project.showcaseImage }}" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{ project.title }}</h5>
                            <p class="card-text">{{ project.projectDate|date("d/m/Y") }}</p>
                            <p class="card-text">{{ project.category.name }}</p>
                            <p class="card-text">
                                {{ project.description|length > 50 ?  project.description|slice(0, 50) ~ 'â€¦' : project.description}}
                            </p>
                            <p class="card-text">
                                {% for codeLanguage in project.codeLanguage %}
                                    {{ codeLanguage.name }}
                                {% endfor %}
                            </p>
                            <a href="{{ path('project_show', {'id': project.id}) }}" class="btn btn-primary" target="_blank">Voir le projet</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
