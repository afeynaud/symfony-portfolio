{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class='row'>
            <div class='col'>
                <h1>{{ project.title }}</h1>
                <img src='{{ project.showcaseImage }}' alt=''>
                <p>{{ project.projectDate|date("d/m/Y") }}</p>
                <p>{{ project.category.name }}</p>
                {% for codeLanguage in project.codeLanguage %}
                    {{ codeLanguage.name }}
                {% endfor %}
                <p>{{ project.applicationUrl }}</p>
                <p>{{ project.githubUrl }}</p>
                <p>{{ project.description }}</p>
            </div>
        </div>
    </div>
{% endblock %}
